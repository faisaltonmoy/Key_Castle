@page
@model LoginModel
    
    @{ ViewData["Title"] = "Log in"; }

    <div class="content " style="background-image: url('https://www.wallpapertip.com/wmimgs/80-805348_game-wallpapers-hd-collection-for-free-download-gaming.jpg'); width: 100%; height: 100%; background-size: 100%; ">
        <div class="container">
            <div class="row justify-content-center">
                <!-- <div class="col-md-6 order-md-2">
                  <img src="images/undraw_file_sync_ot38.svg" alt="Image" class="img-fluid">
                </div> -->
                <div class="col-md-6 contents pt-5" style="border-radius:10px; box-shadow: 0px 0px 10px 0px #808080;">
                    <div class="row justify-content-center">
                        <div class="col-md-12">

                            <section>
                                <form id="account" method="post">
                                    <h4 class="text-center" style="color:aliceblue;">@ViewData["Title"]</h4>
                                    <hr style="color:aliceblue;" />
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="form-group">
                                        <label style="color:aliceblue;" asp-for="Input.Email"></label>
                                        <input style="color:aliceblue;" asp-for="Input.Email" class="form-control" />
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label style="color:aliceblue;" asp-for="Input.Password"></label>
                                        <input style="color:aliceblue;" asp-for="Input.Password" class="form-control" />
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>
                                    <div class="form-group d-flex mb-5 align-items-center">
                                        <div class="checkbox">
                                            <label style="color:aliceblue;" asp-for="Input.RememberMe">
                                                <input asp-for="Input.RememberMe" />
                                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                                            </label>
                                        </div>
                                    </div>
                                    <div class="form-group mt-2">
                                        <button type="submit" class="btn btn-pill text-white btn-block btn-primary">Log in</button>
                                    </div>
                                    <div class="form-group   flex-sb-m w-full p-b-48">

                                        <a style="color:aliceblue;" class="forgot-pass" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>


                                    </div>

                                    <div class=" form-group   flex-sb-m w-full p-b-48">

                                        <a style="color:aliceblue;" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>

                                    </div>

                                    <div class="form-group  mb-5 align-items-center">

                                        <a style="color:aliceblue;" id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>

                                    </div>
                                </form>
                            </section>
                        </div>
                        <div class="col-md-6 col-md-offset-2">
                            <section>

                                @{ if ((Model.ExternalLogins?.Count ?? 0) == 0)
                                                {
                                    <div>
                                        <p>

                                        </p>
                                    </div> }
                                                else
                                                {
                                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                        <div>
                                            <p>
                                                @foreach (var provider in Model.ExternalLogins)
                                                {
                                <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>}
                                            </p>
                                        </div>
                                    </form> } }
                            </section>
                        </div>

                    </div>

                </div>

            </div>
        </div>
    </div>


    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
