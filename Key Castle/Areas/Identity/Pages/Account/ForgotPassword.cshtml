@page
@model ForgotPasswordModel
@{ ViewData["Title"] = "Forgot your password?"; }

<div class="content " style="background-image:  url('https://www.wallpapertip.com/wmimgs/80-805348_game-wallpapers-hd-collection-for-free-download-gaming.jpg'); background-repeat: no-repeat; background-size: cover; background-attachment: fixed; width: 100%; height: 100%; background-size: 100%; ">
    <div class="container mt-5 pt-5">
        <div class="row justify-content-center">
            <!-- <div class="col-md-6 order-md-2">
              <img src="images/undraw_file_sync_ot38.svg" alt="Image" class="img-fluid">
            </div> -->
            <div class="col-md-6 contents pt-5" style="border-radius:20px; box-shadow: 0px 0px 10px 0px #000;">
                <div class="row justify-content-center mt-5 pt-5">
                    <div class="col-md-12">

                        <section >
                            <form id="account" method="post">
                                <h4 style="color:aliceblue" class="text-center">@ViewData["Title"]</h4>
                                <h4 style="color:aliceblue" class="text-center">Enter your email.</h4>
                                <hr />
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group">
                                    <label  style="color:aliceblue" asp-for="Input.Email"></label>
                                    <input style="color:aliceblue" asp-for="Input.Email" class="form-control" />
                                    <span style="color:aliceblue" asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>


                                <div class="form-group mt-2">
                                    <button type="submit" class="btn btn-pill text-white btn-block btn-primary">Submit</button>
                                </div>


                            </form>
                        </section>
                    </div>


                </div>

            </div>

        </div>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
