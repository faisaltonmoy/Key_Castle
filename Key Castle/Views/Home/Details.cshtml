@model Key_Castle_Models.ViewModels.DetailsVM
@using Key_Castle_Utility

<div class="">
    <form method="post">

        <input asp-for="@Model.Product.Product_id" hidden />
        <div class="container backgroundWhite pt-4">
            <div class="card" style="border:1px solid #000000; ">
                <div class="card-header bg-dark text-light ml-0 row container" style="border-radius: 0px;">
                    <div class="col-12 col-md-6">
                        <h1 class="text-white">@Model.Product.Product_name</h1>
                    </div>
                    <div class="col-12 col-md-6 text-md-right">
                        <h1 class="text-warning"> @((Model.Product.Price)) BDT</h1>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-4 p-1 text-center">
                                <img src="@WC.ImagePath@Model.Product.Product_photo" width="100" class="rounded" />
                            </div>
                            <div class="col-12 col-lg-8">
                                <div class="row pl-3">

                                    <div class="col-12">
                                        <span class="badge p-3 border text-dark" style="background-color:lavenderblush">@Model.Product.Category.Category_name</span>
                                        <span class="badge p-3 border text-dark" style="background-color:azure">@Model.Product.Qty</span>
                                        <h3 class="text-success"></h3>

                                        <p class="text-secondary">@Html.Raw(Model.Product.Desc) </p>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-dark">
                    <div class="row justify-content-center">
                        <div class="col-12 col-md-6 pb-1">
                            <a asp-action="Index" class="btn btn-success btn-square form-control btn-lg" style="height:50px;">Back to List</a>
                        </div>
                        @if (!User.IsInRole(WC.AdminRole))
                        {
                            <div class="col-12 col-md-6 ">
                                @if (Model.ExistsInCart)
                                {
                                    <a asp-action="RemoveFromCart" asp-route-id="@Model.Product.Product_id" class="btn btn-warning btn-square form-control btn-lg" style="height:50px;">Remove from Cart</a>
                                }
                                else
                                {
                                    <button type="submit" asp-route-id="@Model.Product.Product_id" class="btn btn-info form-control btn-lg" style="height:50px;">Add to Cart</button>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>