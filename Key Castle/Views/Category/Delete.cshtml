@model Key_Castle_Models.Category



<div class="pt-5  " style="background-image: url('https://www.wallpapertip.com/wmimgs/80-805348_game-wallpapers-hd-collection-for-free-download-gaming.jpg'); background-repeat: no-repeat;background-size:cover; background-attachment: fixed; width: 100%; height: 100%; background-size: 100%; ">
    <div class="container-fluid   pt-5 ">
        <div class="row justify-content-center mt-5 pt-5">

            <div class="col-md-6 contents pt-5 mt-5 mb-5 pb-5 " style="border-radius:10px; box-shadow: 0px 0px 10px 0px #808080;">
                <div class="row justify-content-center">
                    <div class="col-md-12 mt-2 pt-2 mb-2 pb-5">



                        <form method="post" asp-action="DeletePost">
                            <input asp-for="Category_id" hidden />
                            <div class="border p-3 bg-white">

                                <div class="form-group row">
                                    <h2 class="text-info pl-3 text-center">Delete Category</h2>
                                </div>
                                <div class="row m-auto">
                                    <div class="col-8">
                                        <div class="form-group row py-2">
                                            <div class="col-4">
                                                <label style="color:black" asp-for="Category_name"></label>
                                            </div>
                                            <div class="col-8">
                                                <input style="color:black" asp-for="Category_name" disabled class="form-control" />
                                            </div>

                                        </div>
                                        <div class="form-group row py-2">
                                            <div class="col-4">
                                                <label style="color:black" asp-for="Status"></label>
                                            </div>
                                            <div class="col-8">
                                                <input style="color:black" asp-for="Status" disabled class="form-control" />
                                            </div>

                                        </div>
                                        <div class="form-group row py-2">
                                            <div class="col-8 offset-4 row">

                                                <div class="col">
                                                    <input type="submit" class="btn btn-danger w-100" value="Delete" />
                                                </div>
                                                <div class="col">
                                                    <a asp-action="CategoryCon" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        @* Keep this empty *@
                                    </div>
                                </div>
                            </div>

                        </form>

                    </div>


                </div>

            </div>

        </div>
    </div>
</div>
