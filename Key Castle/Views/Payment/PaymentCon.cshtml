@model IEnumerable<Key_Castle_Models.Payment>

<div class="container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary">Payment List</h2>
        </div>
    </div>
</div>

<br />
<br />

@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Payment Id</th>
                <th>Cart Id</th>
                <th>Seller ID</th>
                <th>Buyer ID</th>
                <th>Method</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="10%">@obj.Pay_id</td>
                    <td width="20%">@obj.Cart_id</td>
                    <td width="10%">@obj.Seller_id</td>
                    <td width="20%">@obj.Buyer_id</td>
                    <td width="10%">@obj.Method</td>
                    <td width="30%">@obj.Amount</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Nothing</p>
}




